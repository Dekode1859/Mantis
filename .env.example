# Database Configuration
DB_USER=mantis_user
DB_PASSWORD=change_me_to_secure_password

# AI Provider Configuration
# Configure providers in the Settings tab after login. Google API key is optional fallback.
# GOOGLE_API_KEY=your_google_api_key_here
# GEMINI_MODEL_NAME=gemini-2.0-flash-exp

# JWT Authentication Configuration
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=43200

# CORS Configuration (for production HTTPS)
CORS_ALLOW_ORIGIN_REGEX=https://.*

# Cloudflare Tunnel Token (optional for local testing, required for production)
# Get this from: Cloudflare Dashboard → Zero Trust → Access → Tunnels
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here
